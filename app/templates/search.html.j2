<!DOCTYPE html>
<html lang="">
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <header></header>
    <main>
      <h3> 
        Search similar anime 
      </h3>
      <form method="POST">
        <input name="search" type="search">
      </form>
      
      <table class="table">
          <thead>
          <tr>
            <th>Name</th>
            {% if context == 'similar' %}
            <td>Similarity</td>
            {% endif %}
          </tr>
          </thead>
          <tbody id="search-results">
            {% for result in results %}
            <tr>
              <td><a href="{{ url_for('get_similar', anime_id=result[0]) }}">{{ result[1] }}</a></td>
              {% if context == 'similar' %}
              <td>{{ result[2] }}</td>
              {% endif %}
            </tr>
            {% endfor %}
          </tbody>
      </table>
    </main>
    <footer></footer>
  </body>
</html>
